article.place.list-item.row(id="place-{{place.ID}}" ng-controller="PlaceController")
	.image(ng-show="place.featured_image" style="background-image:url({{place.featured_image.attachment_meta.sizes.medium.url}});")
	header.place-header
		place-icon(place="place")
		h2
			a(href="javascript:void(0)" ng-click="accessPlace(place)") {{place.title}}
		p.address {{sanitizeAddress(place)}}
	section.place-rating
		p.review-count
			span.label Review count
			span.icon.entypo &#9998;
			span.count {{place.review_count}}
		p.structure
			span.label Structure
			span.icon.entypo &#9733;
			span.count {{place.scores.structure}}
		p.kindness
			span.label Kindness
			span.icon.entypo &hearts;
			span.count {{place.scores.kindness}}